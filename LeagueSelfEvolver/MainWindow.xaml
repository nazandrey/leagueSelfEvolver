<Window x:Class="LeagueSelfEvolver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeagueSelfEvolver"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Closing="Save_Xml">
    <Window.Resources>
        <Style TargetType="{x:Type DataGridRow}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding}" Value="{x:Static CollectionView.NewItemPlaceholder}">
                    <Setter Property="Background" Value="LightGreen"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <DataGrid x:Name="eventListGrid" HorizontalAlignment="Left" Margin="35,135,0,0" VerticalAlignment="Top" Height="115" Width="420" ItemsSource="{Binding EventList}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Goal Comment" Binding="{Binding Path=GoalComment}" />
                <DataGridTextColumn Header="General Comment" Binding="{Binding Path=GeneralComment}" />
                <DataGridTextColumn Header="Resolution" Binding="{Binding Path=Resolution}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="Save" Content="Save" HorizontalAlignment="Left" Height="50" Margin="270,30,0,0" VerticalAlignment="Top" Width="140" Click="Save_Xml"/>
    </Grid>
</Window>
