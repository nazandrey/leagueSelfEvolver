<UserControl x:Class="LeagueSelfEvolver.Controls.EditTextBox"
             x:Name="editBoxRoot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LeagueSelfEvolver.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
        <TextBox x:Name="editTextBox" 
                 DataContext="{Binding ElementName=editBoxRoot}"
                 FocusableChanged="editTextBox_FocusableChanged" 
                 LostFocus="editTextBox_LostFocus" 
                 MouseDown="editTextBox_MouseDown" 
                 KeyDown="editTextBox_KeyDown" 
                 Background="{x:Null}" 
                 BorderBrush="{x:Null}"
                 Text="{Binding Path=Value}"/>
</UserControl>
